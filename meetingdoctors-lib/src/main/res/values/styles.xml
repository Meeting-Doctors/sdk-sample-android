<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.EditTextError" parent="@android:style/TextAppearance"
        tools:ignore="ResourceName">
        <item name="android:textColor">@color/meetingdoctors_status_red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MediQuoWhiteTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/meetingdoctors_white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="MediQuoChatWallpaper">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">430dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/mediquo_chat_background_image</item>
    </style>

    <style name="MediQuoMedicalHistoryItemSize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingStart">@dimen/meetingdoctors_margin</item>
        <item name="android:paddingEnd">@dimen/meetingdoctors_margin</item>
        <item name="android:paddingTop">@dimen/meetingdoctors_margin_small</item>
        <item name="android:paddingBottom">@dimen/meetingdoctors_margin_small</item>
    </style>

    <style name="MediQuoTextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediQuoTextSubheading">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediQuoTextBody1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="meetingdoctors_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textColor">@color/meetingdoctors_text_base_color</item>
    </style>

    <style name="meetingdoctors_nps_dialog" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/meetingdoctors_white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="meetingdoctors_documentItemProperties">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingStart">@dimen/meetingdoctors_margin</item>
        <item name="android:paddingEnd">@dimen/meetingdoctors_margin</item>
        <item name="android:paddingTop">@dimen/meetingdoctors_margin_small</item>
        <item name="android:paddingBottom">@dimen/meetingdoctors_margin_small</item>
    </style>

</resources>
