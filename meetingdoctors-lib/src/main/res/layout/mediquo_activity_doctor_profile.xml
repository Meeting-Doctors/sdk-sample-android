<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/meetingdoctors_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/meetingdoctors_doctor_image_background_color"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/doctor_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/meetingdoctors_doctor_profile_background_color"
                tools:background="@color/meetingdoctors_blue_light"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="14dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:paddingTop="14dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Patricia Pradera"
                        android:textColor="@color/meetingdoctors_doctor_profile_header_name_color"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/speciality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        tools:text="Psicologia"
                        android:textColor="@color/meetingdoctors_doctor_profile_header_speciality_color"
                        tools:textColor="@color/meetingdoctors_blue"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/doctor_speciality_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="22dp"
                    android:alpha="0.5"
                    app:srcCompat="@drawable/mediquo_psicologo_icon" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/schedule_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/schedule_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mediquo_background_doctor_information"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="-250dp"
                    android:layout_marginEnd="-175dp"
                    android:layout_marginTop="-70dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/mediquo_background_logo" />

                <TextView
                    android:id="@+id/schedule_layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/mediquo_background_doctor_information_schedule_header"
                    android:text="@string/meetingdoctors_doctor_schedule_title"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schedule_layout_header"
                    android:layout_margin="16dp"
                    android:lineSpacingMultiplier="1.2"
                    android:singleLine="false"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas maximus arcu quis faucibus dapibus."/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mediquo_background_doctor_information"
                android:elevation="6dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="-450dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="-120dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/mediquo_background_logo" />

                <TextView
                    android:id="@+id/description_layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/mediquo_background_doctor_information_description_header"
                    android:text="@string/meetingdoctors_doctor_description_title"
                    android:textColor="#ffffff"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_layout_header"
                    android:layout_margin="16dp"
                    android:lineSpacingMultiplier="1.2"
                    android:singleLine="false"
                    android:textColor="@android:color/black"
                    android:autoLink="web"
                    android:textColorLink="@color/meetingdoctors_base_color"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas maximus arcu quis faucibus dapibus. Nulla luctus, lacus sit amet varius venenatis, ligula mauris gravida mi, vitae semper nisi sapien ullamcorper nulla."/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>