<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/professional_list_invitation_code_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:orientation="vertical"
        tools:visibility="visible">

        <TextView
            android:id="@+id/professional_list_invitation_code_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:textSize="15sp"
            android:text="@string/meetingdoctors_professional_empty_list_message"
            android:gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/professional_list_invitation_code_button"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginHorizontal="32dp"
            android:text="@string/meetingdoctors_professional_list_invitation_code"
            android:layout_marginTop="32dp"
            android:textColor="@android:color/white"
            android:background="@color/meetingdoctors_base_color"
            tools:background="@android:color/holo_blue_dark"/>


    </LinearLayout>

</FrameLayout>