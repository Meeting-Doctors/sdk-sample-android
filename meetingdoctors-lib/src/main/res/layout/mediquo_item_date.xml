<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="4dp">
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/meetingdoctors_message_text_color_date"
        android:background="@drawable/mediquo_message_balloon_date"
        android:backgroundTint="@color/meetingdoctors_message_background_color_date"
        tools:text="1 de enero"/>
</LinearLayout>
