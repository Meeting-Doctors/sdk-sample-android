<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="left"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:gravity="center_vertical|left"
        android:background="@drawable/mediquo_message_balloon_their"
        android:backgroundTint="@color/meetingdoctors_message_background_color_their">
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:textIsSelectable="true"
            android:autoLink="all"
            android:textColor="@color/meetingdoctors_message_text_color_their"
            android:textColorLink="@color/meetingdoctors_message_text_color_their"
            android:textSize="16sp"
            tools:text="En un lugar de la Mancha"/>
        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/meetingdoctors_message_text_color_their"
            android:textSize="10sp"
            tools:text="12:00"/>
    </LinearLayout>
</LinearLayout>