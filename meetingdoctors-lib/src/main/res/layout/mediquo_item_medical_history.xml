<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    style="@style/MediQuoMedicalHistoryItemSize"
    android:id="@+id/item_medical_history_container">

    <ImageView
        android:id="@+id/navigate_button"
        android:layout_width="8dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/navigate_button_dark_blue"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/mediquo_ic_medical_history_allergies" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/navigate_button"
        android:layout_marginStart="48dp"
        android:layout_centerVertical="true"
        style="@style/MediQuoTextSubheading"
        android:textColor="@color/meetingdoctors_blue_dark"
        tools:text="Alergias" />

</RelativeLayout>



