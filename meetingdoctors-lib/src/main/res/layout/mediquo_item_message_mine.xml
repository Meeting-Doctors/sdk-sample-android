<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="end"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingStart="10dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        android:gravity="center_vertical|end"
        android:background="@drawable/mediquo_message_balloon_mine"
        android:backgroundTint="@color/meetingdoctors_message_background_color_mine">
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:textIsSelectable="true"
            android:textColor="@color/meetingdoctors_message_text_color_mine"
            android:textColorLink="@color/meetingdoctors_message_text_color_mine"
            android:textSize="16sp"
            tools:text="En un lugar de la Mancha"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/meetingdoctors_message_text_color_mine"
                android:textSize="10sp"
                tools:text="12:00"/>
            <ImageView
                android:id="@+id/message_status"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_marginLeft="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/mediquo_check"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>