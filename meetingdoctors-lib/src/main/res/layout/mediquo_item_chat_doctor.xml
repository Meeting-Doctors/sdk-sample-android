<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/doctor_photo"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />
                <LinearLayout
                    android:id="@+id/doctor_status"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="42dp"
                    android:paddingStart="5.5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="3.5dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/mediquo_circle_gray"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/doctor_speciality_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/mediquo_medico_icon"/>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/service_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Dr. Mauricio Tejada"/>

                    <TextView
                        android:id="@+id/doctor_last_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="end"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:maxLines="1"
                        tools:text="Hace dos dÃ­as"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/doctor_speciality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/meetingdoctors_speciality_color"
                            android:ellipsize="end"
                            tools:text="Medicina general"/>
                        <TextView
                            android:id="@+id/doctor_next_scheduling"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:textColor="#888888"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="Disponible hasta las 18:00"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/doctor_pending_messages"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:background="@drawable/mediquo_circle_pending_messages"
                        android:textColor="@color/meetingdoctors_white"
                        android:text="99"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/meetingdoctors_soft_gray"/>

    </LinearLayout>

    <View
        android:id="@+id/disabled"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/meetingdoctors_disabled_professional_color"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/doctor_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/doctor_schedulings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</FrameLayout>