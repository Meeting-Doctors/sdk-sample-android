<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="vertical"
        android:gravity="center_vertical|end"
        android:background="@drawable/mediquo_message_balloon_mine"
        android:backgroundTint="@color/meetingdoctors_message_background_color_mine">
        <RelativeLayout
            android:id="@+id/image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>
            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/meetingdoctors_blue"
                android:visibility="gone">
            </ProgressBar>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingEnd="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/meetingdoctors_message_text_color_mine"
                android:textSize="10sp"
                android:text=""/>
            <ImageView
                android:id="@+id/message_status"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_marginLeft="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/mediquo_check"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>